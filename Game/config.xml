<!-- Config file for the game -->

<config>
  <app framerate_cap ="60">
    <title>Factory Escape</title>
    <organization>UPC</organization>
    <save_game file ="savegame/save_game1.xml"></save_game>
    <save_game file ="savegame/save_game2.xml"></save_game>
    <save_game file ="savegame/save_game3.xml"></save_game>
  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1251" height="704" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
    <music level ="audio/music/Urban-Jungle-2061_Looping.ogg"></music>
  </map>

  <scene>
    <maps map ="Map1.tmx"></maps>
    <maps map ="Map2.tmx"></maps>
  </scene>

  <audio>
    <volume music = "0.1"></volume>
  </audio>

  <gui>
    <atlas file="textures/UI_atlas.png"></atlas>
  </gui>
  
</config>